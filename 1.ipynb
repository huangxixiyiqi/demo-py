    "import langid\n",
    "\n",
    "def detect_language(text):\n",
    "    result = langid.classify(text)\n",
    "    return result[0]\n",
    "\n",
    "# text = input(\"请输入一段文本: \")\n",
    "language = detect_language('我是中国人')\n",
    "\n",
    "if language == 'zh':\n",
    "    print(\"这段文本是中文\")\n",
    "elif language == 'en':\n",
    "    print(\"这段文本是英文\")\n",
    "else:\n",
    "    print(\"无法确定文本语言\")"
   ]
  }
